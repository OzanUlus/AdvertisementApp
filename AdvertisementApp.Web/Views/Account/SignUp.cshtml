@model UserCreateModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
    <form asp-controller="Account" asp-action="SignUp" method="post" class="p-4 w-75 mx-auto" >
        <div class="mb-2">
            <label>Adınız :</label>
            <input asp-for="@Model.FirstName" class="form-control" placeholder="Adınız">
        </div>
        <div class="mb-2">
            <label>Soyadınız :</label>
            <input asp-for="@Model.Surname" class="form-control" placeholder="Soyadınız">
        </div>
        <div class="mb-2">
            <label>Kullanıcı Adınız :</label>
            <input asp-for="@Model.Username" class="form-control" placeholder="Kullanıcı Adınız">
        </div>
        <div class="mb-2">
            <label>Telefon Numaranız :</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Telefon Numaranız">
        </div>
        <div class="mb-2">
            <label>Şifreniz :</label>
            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Şifreniz">
        </div>
        <div class="mb-2">
            <label>Tekrar Şifreniz :</label>
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi Tekrar Giriniz">
        </div>
        <div class="mb-2">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0">Bir Cinsiyet Seçiniz</option>
            </select>
        </div>
        <div class="mb-2 text-end">
            <button type="submit" class="btn btn-outline-info">Kayıt Ol</button>
        </div>
        <div class="text-bg-danger text-center" asp-validation-summary="All" style="margin-bottom : 3px"></div>
    </form>
</div>

