@model AppUserLogInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-1">
    <form asp-action="SignIn" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">

        <div class="mb-2">
            <label>Kullanıcı Adınız :</label>
            <input asp-for="@Model.Username" class="form-control" placeholder="Kullanıcı Adınız">
        </div>

        <div class="mb-2">
            <label>Şifreniz :</label>
            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Şifreniz">
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model.RenemberMe" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>

        <div class="mb-2 text-end">
            <button type="submit" class="btn btn-outline-primary">Giriş Yap</button>
        </div>
        <div class="text-bg-danger text-center" asp-validation-summary="All" style="margin-bottom : 3px"></div>
    </form>

</div>
